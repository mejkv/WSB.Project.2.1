@page
@model ShoppingCartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Total: @Model.TotalPrice.ToString("C")</p>

<td>
    <form method="post">
        <input type="hidden" name="products" value="@Model.ShoppingCartItems" />
        <button type="submit" asp-page-handler="ProceedCheckout">Proceed to Checkout</button>
    </form>
</td>
